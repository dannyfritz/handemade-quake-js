{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
  },
  "extends": "eslint:recommended",
  "rules": {
    "comma-dangle": [2, "always-multiline"],
    "no-console": [1],
    "no-unexpected-multiline": [2],
    "valid-jsdoc": [2],

    "consistent-return": [2],
    "curly": [2],
    "dot-location": [2, "property"],
    "eqeqeq": [2],
    "no-lone-blocks": [2],
    "no-loop-func": [2],
    "no-multi-spaces": [2],
    "no-native-reassign": [2],
    "no-sequences": [2],
    "no-throw-literal": [2],

    "strict": [2, "global"],

    "arrow-body-style": [2],
    "arrow-parens": [2],
    "arrow-spacing": [2],
    "no-arrow-condition": [2],
    "no-var": [2],
    "object-shorthand": [2],
    "prefer-arrow-callback": [2],
    "prefer-const": [2],
    "prefer-template": [2],

    "quotes": [2],
    "semi": [2, "never"],
    "space-after-keywords": [2],
  },
}
